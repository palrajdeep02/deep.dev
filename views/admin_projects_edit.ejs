<%- include('partials/_header') %>
<%- include('partials/_navbar') %>

<div class="form-container">
    <div class="form-card">
        <h1>Edit Project</h1>
        <form action="/admin/projects/edit/<%= project._id %>?_method=PUT" method="POST">
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= project.title %>" required>
            </div>
            <div>
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="5" required><%= project.description %></textarea>
            </div>
            <div>
                <label for="imageUrl">Image URL</label>
                <input type="text" id="imageUrl" name="imageUrl" value="<%= project.imageUrl %>" required>
            </div>
            <div>
                <label for="projectUrl">Project URL</label>
                <input type="text" id="projectUrl" name="projectUrl" value="<%= project.projectUrl %>" required>
            </div>
            <div>
                <label for="technologies">Technologies (comma-separated)</label>
                <input type="text" id="technologies" name="technologies" value="<%= project.technologies.join(', ') %>">
            </div>
            <button type="submit" class="button">Update Project</button>
        </form>
    </div>
</div>

<%- include('partials/_footer') %>