<%- include('partials/_header') %>
<%- include('partials/_navbar') %>

<div class="form-container">
    <div class="form-card">
        <h1>Login</h1>
        <a href="/auth/google" class="button" style="width: 100%; margin-bottom: 1rem; text-align: center; background: #db4437;">
            Login with Google
        </a>
        <p style="text-align: center; color: var(--text-secondary);">— OR —</p>
        
        <form action="/login" method="POST">
            <% if (messages.error) { %>
                <p style="padding: 1rem; color: #f8d7da; background-color: rgba(220, 53, 69, 0.2); border: 1px solid rgba(220, 53, 69, 0.5); border-radius: 12px; text-align: center; margin-bottom: 1rem;">
                    <%= messages.error %>
                </p>
            <% } %>
            <input type="text" name="username" placeholder="Username or Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit" class="button">Login</button>
        </form>

        <p style="text-align: center; margin-top: 1.5rem; color: var(--text-secondary);">
            New here? <a href="/register">Create an account</a>
        </p>
    </div>
</div>

<%- include('partials/_footer') %>