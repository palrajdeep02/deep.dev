<%- include('partials/_header') %>
<%- include('partials/_navbar') %>

<main class="container">
    <div class="page-header">
        <h1>Dashboard</h1>
        <p style="color: var(--text-secondary); margin:0;">Welcome, <%= user.username %></p>
    </div>

    <div class="card-container">
        <div class="glass-card">
            <h3 style="margin-top: 0;">📝 Blog Management</h3>
            <p style="color: var(--text-secondary);">Create, edit, and delete your blog posts.</p>
            <p><strong>Total Posts:</strong> <%= blogCount %></p>
            <a href="/admin/blogs" class="button" style="margin-top: 1rem;">Manage Blogs</a>
        </div>

        <div class="glass-card">
            <h3 style="margin-top: 0;">💼 Project Management</h3>
            <p style="color: var(--text-secondary);">Showcase your best work and projects.</p>
            <p><strong>Total Projects:</strong> <%= projectCount %></p>
            <a href="/admin/projects" class="button" style="margin-top: 1rem;">Manage Projects</a>
        </div>

        <div class="glass-card">
            <h3 style="margin-top: 0;">💡 Skill Management</h3>
            <p style="color: var(--text-secondary);">List your professional skills and tech stack.</p>
            <p><strong>Total Skills:</strong> <%= skillCount %></p>
            <a href="/admin/skills" class="button" style="margin-top: 1rem;">Manage Skills</a>
        </div>
    </div>
</main>

<%- include('partials/_footer') %>